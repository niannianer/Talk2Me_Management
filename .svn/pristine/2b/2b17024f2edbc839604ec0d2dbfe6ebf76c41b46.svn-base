@charset "UTF-8";
@import "../../Common/less/variables";
.my-claim{
  min-height: 100%;
  .no-claimed{
    padding-top: 2rem;
    .text{
      padding: 1rem 0;
      text-align: center;
      font-size: .8rem;
    }
  }
  .again-claim-wrap{
    background: #fff;
  }
  .avatar-item{
    padding: .5rem 0 .7rem;
    margin-top: -.4rem;
    &.nomargin{
      margin: 0;
    }
    .inner-img{
      width: 100%;
      min-height: 3rem;
      height: auto;
      max-height: 5rem;
    }
    .image-box{
      width: 3rem;
      min-height: 3rem;
      height: auto;
      max-height: 5rem;
      position: relative;
      float: left;
      margin: 0 .3rem;
      border: 1px solid #ccc;
      .close-btn{
        width: 1rem;
        position: absolute;
        top: -.45rem;
        right: -.3rem;
        background: #fff;
        border-radius: 50%;
      }
    }
    .show-img{
      width: 3rem;
      height: 3rem;
      border: 2px dashed #ddd;
    }

  }
  .upload-box{
    width: 3rem;
    min-height: 3rem;
    height: auto;
    max-height: 5rem;
    border: 2px dashed #ddd;
    position: relative;
    float: left;
    margin: 0 .3rem;
    .icon{
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%,-50%);
      font-size: 2rem;
      color: #ddd;
      margin-top: -.2rem;
    }
  }
  .action-btn{
    margin: .5rem 0;
    .mint-button--small{
      width: 15rem;
      height: 2rem;
    }
  }
  .merchant-detail{
    padding-bottom: 0;
    .save-btn{
      display: none;
    }
  }
  .align-center{
    text-align: center;
  }
  p{
    padding-bottom: .5rem;
  }

  .item-card{
    background: #fff;
    margin: 0 0 .5rem 0;
    padding: 0 .6rem;
    .card-item{
      font-size: .8rem;
      line-height: 1rem;
      border-top: 1px solid @border-color;
      &:first-child{
        border: none;
      }
      .type-item{
        border: 1px solid #ddd;
        display: inline-block;
        margin: .3rem .2rem;
        height: 1.3rem;
        line-height: 1.3rem;
        color: @color-text-secondary;
        border-radius: 3rem;
        text-align: center;
        font-size: .7rem;
        min-width: 3rem;
        padding: 0 .3rem;
        &:first-child{
          margin-left: 0;
        }
        &.active{
          border-color: @bg-button;
          color: #fff;
          background: @bg-button;
        }
      }
      .textarea-box{
        padding: 0 .2rem;
        .textarea{
          border: 1px solid @border-color;
          height: 5rem;
          width: 100%;
          padding: .2rem;
          margin: 0 auto .5rem;
          font-size: .7rem;
        }
      }
      .title{
        color: @color-text-gray;
        padding: 0 .2rem 0 .4rem;
        margin-right: .5rem;
        width: 4.5rem;
        line-height: 2.2rem;
        height: 2.2rem;
        &.long-title{
          width: 5.2rem;
        }
      }
      .edit-item{
        font-size: .7rem;
        padding: .7rem 0;
        color: @color-text;
      }
    }
  }
  .qx-wrap{
    padding-bottom: .5rem;
    .title{
      font-size: .8rem;
      padding: .3rem;
    }
  }
}

