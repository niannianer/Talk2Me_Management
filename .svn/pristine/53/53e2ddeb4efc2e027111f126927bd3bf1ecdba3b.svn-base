@charset "UTF-8";
@import "../../Common/less/variables";

.keyword-edit{
    min-height: 100%;
    overflow: auto;
    padding-bottom: 1rem;
    .mert-edit-form{
        width: 700px;
        margin-left: 50px;
    }
    .form-item {
        .upload-box{
            padding-left: 110px;
            .upload-inner{
                padding-top: 10px;
            }
        }
        .must{
            position: relative;
            &:before{
                content: '*';
                font-size: 20px;
                color: red;
                position: absolute;
                top: -2px;
                left: -8px;
                line-height: 10px;
            }
        }
        .edit-item{
            height: 40px;
            line-height: 40px;
            padding: 0 15px;
            background-color: #fff;
            border-radius: 4px;
            border: 1px solid #dcdfe6;
            &.place-text{
                color: #999;
            }
        }
        .img-item{
            width: 150px;
            margin-right: 10px;
            height: auto;
        }
        .textarea-item{
            width: 400px;
            height: 100px;
            .el-textarea__inner{
                height: 100px;
            }
        }
        .unshow {
            background-color: #f5f7fa;
            border-color: #e4e7ed;
            color: #c0c4cc;
            cursor: not-allowed;
        }
        .el-autocomplete {
            width: 100%;
        }
    }
}
