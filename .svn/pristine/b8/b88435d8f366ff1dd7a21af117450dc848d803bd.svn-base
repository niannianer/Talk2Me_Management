@charset "UTF-8";
@import "../../Common/less/variables";

.post-message{
    .text-title {
        font-size: 16px;
        font-weight: 700;
        margin: 10px 0;
    }
    .content {
        padding: 5px;
        border: 1px solid #ccc;
        .text-box {
            width: 100%;
            min-height: 150px;
            font-size: 14px;
        };
    }
    .btn {
        padding: 10px 0;
        p {
            height: 32px;
            line-height: 32px;
        }
    }
    .success-row {
        width: 100%;
        background-color: #efefef;
    }
}