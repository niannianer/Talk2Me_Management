@charset "UTF-8";
@import "../../Common/less/variables";

.my-service {
    position: relative;
    width: 100%;
    padding: 20px 0px 10px;
    color: #333;
    .el-scrollbar__wrap {
        overflow-x: hidden;
        overflow-y: auto;
    }
    .title {
        margin-bottom: 20px;
        span {
            color: #000;
            font-weight: 700;
            padding: 10px 0;
            border-bottom: 3px solid #40ccf6;
        }
    }
    .info {
        .el-row {
            padding: 10px 0;
        }
    }
    .label-name{
        display: inline-block;
        min-width: 150px;
        text-align: right;
        color: #777;
    }
    .status-action{
            background: #fff;
            padding: 10px 0;
            font-weight: bold;
        }
        .status-box{
            color: chocolate;
            .remind-text{
                color: #666;
                font-size: .6rem;
                margin-left: .2rem;
            }
        }
    .inner-title{
        .sub-name{
            color: #40ccf6;
            font-weight: bold;
            padding-left: 50px;
        }
    }
    .img-path{
        width: 120px;
        height: 120px;
        border-radius: 4px;
        border: 1px solid #eee;
        margin-right: 10px;
    }
    
}
